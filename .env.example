# Database Configuration (REQUERIDO)
# Replit: Neon Database URL se configura automáticamente
# Docker: PostgreSQL local - configurar en .env
DATABASE_URL=postgresql://novalearn:novalearn123@localhost:5432/novalearn

# Variables de PostgreSQL (REQUERIDAS para Docker)
PGHOST=localhost
PGPORT=5432
PGUSER=novalearn
PGPASSWORD=novalearn123
PGDATABASE=novalearn

# Session Secret (REQUERIDO)
# Genera un valor seguro con: openssl rand -base64 32
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Keycloak Configuration (TODAS REQUERIDAS)
KEYCLOAK_URL=https://keycloak.vimcashcorp.com
KEYCLOAK_REALM=nova-learn
KEYCLOAK_CLIENT_ID=nova-backend
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret

# Application Configuration (Opcional)
NODE_ENV=development
PORT=5000
